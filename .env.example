# ===========================================
# AI API 설정 - 다중 제공업체 지원
# ===========================================

# OpenAI 설정 (직접 API 또는 Azure 선택)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_TYPE=openai  # "openai" or "azure"
# Azure 사용시 추가 설정
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Claude 설정 (직접 API 또는 AWS Bedrock 선택)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_API_TYPE=anthropic  # "anthropic" or "bedrock"
# AWS Bedrock 사용시 추가 설정
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Google 설정 (직접 API 또는 Vertex AI 선택)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_TYPE=google  # "google" or "vertex"
# Vertex AI 사용시 추가 설정
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_LOCATION=us-central1

# ===========================================
# 인프라 설정
# ===========================================

# 데이터베이스
DATABASE_URL=sqlite:///./security_test.db

# Redis
REDIS_URL=redis://localhost:6379

# 로깅
LOG_LEVEL=INFO